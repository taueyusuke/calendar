<div class="container-hluid">
  <div class="row no-gutters">
    <div class="col-3 bg-primary ">
      <div>
        <% if current_user %>
          <%= link_to "マイカレンダー", schedules_path, class: "text-muted" %>
        <% end %>
      </div>
      <div>
        <% if current_user %>
          <%= link_to "マイページ", user_path(current_user), class: "text-muted" %>
        <% end %>
      </div>
      <div>
        <% if user_signed_in? %> 
          <%= link_to "サインアウト", destroy_user_session_path, method: :delete, class: "text-muted" %>
        <% end %>
      </div>
    </div>
    <div class="col-9">
      <p><%= current_user.lastname %><%= current_user.firstname %></p>
    <hr class="style">  
    <h1>予約の編集</h1>
    <br>
    <div class="border col-5">
      <br>
      <div class="row">
        <%= form_with model: @schedule, url: conferenceroom_schedule_path(@schedule), local: true do |f| %>
          <%= f.label :starttime %>
          <%= f.text_field :starttime, class: "form-control" %>
          
          <%= f.label :endtime %>
          <%= f.text_field :endtime, class: "form-control" %>
          
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
          
          <%= f.label :content %>
          <%= f.text_field :content, class: "form-control" %>
          
          <div>
            <%= link_to "削除", conferenceroom_schedule_path(@schedule), method: :delete, class: "btn btn-danger" %>
            <%= f.submit "編集", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>