<div class="container-hluid">
  <div class="row no-gutters">
    <div class="col-3 bg-primary ">
      <div>
        <% if current_user %>
          <%= link_to "マイカレンダー", schedules_path, class: "text-muted" %>
        <% end %>
      </div>
      <div>
        <% if current_user %>
          <%= link_to "マイページ", user_path(current_user), class: "text-muted" %>
        <% end %>
      </div>
      <div>
        <% if user_signed_in? %> 
          <%= link_to "サインアウト", destroy_user_session_path, method: :delete, class: "text-muted" %>
        <% end %>
      </div>
    </div>
    <div class="col-9">
      <p><%= current_user.lastname %><%= current_user.firstname %></p>
      <br>
      <hr class="style">
      <br>
    <h1>会議室の新規登録</h1>
    <br>
 
    <div class="border col-5">
      <br>
      <div class="row">
        
        <%= form_with model: @conferenceroom do |f| %>
          <%= f.label :conferenceroomname %>
          <%= f.text_field :conferenceroomname %>
        
        　<%= f.label :people %>
          <%= f.text_field :people %>
          
          <%= f.label :price %>
          <%= f.text_field :price %>
          
          <%= f.label :starttime %>
          <%= f.text_field :starttime %>
          
          <%= f.label :endtime %>
          <%= f.text_field :endtime %>
          
          <%= f.label :remarks %>
          <%= f.text_field :remarks %>
          
          <%= f.submit "登録", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>